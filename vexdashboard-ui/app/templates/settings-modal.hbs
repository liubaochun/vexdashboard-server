{{#my-modal title='Settings' ok='save' close='removeModal'}}
    <form {{action 'ok' on='submit' target=view}} class="form-horizontal">
	    <div class="form-group">
		    <label class="col-sm-2 control-label">Application:</label>
		    <label class="col-sm-2 control-label">CoreVex</label>
			<label class="col-sm-2 control-label">IP Address:</label>
		    <label class="col-sm-2 control-label">192.168.204.1</label>
		</div>
		<div class="form-group">
		    <label class="col-sm-2 control-label">Version:</label>
		    <label class="col-sm-2 control-label">2.3.1-RC</label>
			<label class="col-sm-2 control-label">Memory:</label>
		    <label class="col-sm-2 control-label">8G</label>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Jave Version:</label>
			<label class="col-sm-2 control-label">1.7.0_54</label>
		</div>	
        <div class="form-group">
	        <label class="col-sm-3 control-label">CPU chart in 24 hours:</label>
			<div class="row">
				{{ember-chart type='Line' data=areaChartData width=450 height=200 legend=true}}
			</div>
        </div>
		<div class="form-group">
	        <label class="col-sm-3 control-label">Alarm/Notification in 24 hours:</label>
			<div class="row">
				{{ember-chart type='Line' data=areaChartData width=450 height=200 legend=true}}
			</div>
        </div>
		
    </form>
{{/my-modal}}